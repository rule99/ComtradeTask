
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-2"></div>
    <div class="col">
        <form>
            <div class="mb-3">
                <label class="col-form-label">Search Customer</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rbID" id="rbID">
                    <label class="form-check-label" for="rbID">
                        By ID
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rbName" id="rbName" checked>
                    <label class="form-check-label" for="rbName">
                        By Name
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="lblName">Customer Name</span>
                    <input type="text" class="form-control" placeholder="" aria-label="lblName" aria-describedby="basic-addon1" id="name" name="name">
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="lblID">Customer ID</span>
                    <input type="text" class="form-control" placeholder="" aria-label="ID" aria-describedby="basic-addon1" id="Cid" name="Cid">
                </div>

            </div>
            <div class="mb-3 CustomerDetails" style="display:none">
               
                    <div class="row">
                        <div class="col">
                            <label class="col-form-label CustomerIme">Customer Name: </label>
                        </div>
                        <div class="col" style="text-align:left">
                            <label class="col-form-label CustomerID">Customer ID: </label>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">
                            <label class="col-form-label CUstomerSSN">Customer SSN: </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Reward</button>
            </div>
            <button type="button" class="btn btn-primary">Search</button>
        </form>
    </div>
    <div class="col-2"></div>
</div>

